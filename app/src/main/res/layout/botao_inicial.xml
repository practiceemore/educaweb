<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clBotao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgBotao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/nomeBotao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nomeBotao"
        app:srcCompat="@drawable/toolbar_fundo_arredondado" />

    <TextView
        android:id="@+id/nomeBotao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Imagens"
        android:textColor="@color/corTextoBotaoInicial"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icDelete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:tint="@color/corTextoBotaoInicial"
        app:layout_constraintBottom_toBottomOf="@+id/imgBotao"
        app:layout_constraintEnd_toEndOf="@+id/imgBotao"
        app:layout_constraintTop_toTopOf="@+id/imgBotao"
        app:srcCompat="@drawable/ic_delete" />

    <ImageView
        android:id="@+id/icEdit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/corTextoBotaoInicial"
        app:layout_constraintBottom_toBottomOf="@+id/icDelete"
        app:layout_constraintEnd_toStartOf="@+id/icDelete"
        app:layout_constraintTop_toTopOf="@+id/icDelete"
        app:srcCompat="@drawable/ic_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>