<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/white">

    <!-- Ícone de IA -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_magic_wand"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_icone_ia"
        android:padding="12dp"
        android:tint="@color/primaria" />

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerando Grade com IA"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primaria"
        android:layout_marginBottom="8dp" />

    <!-- Mensagem de progresso -->
    <TextView
        android:id="@+id/tvMensagemProgresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🔄 Iniciando geração..."
        android:textSize="14sp"
        android:textColor="@color/corTextoBotaoInicial"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Barra de progresso -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:progressTint="@color/primaria" />

    <!-- Texto explicativo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isso pode levar alguns segundos..."
        android:textSize="12sp"
        android:textColor="@color/corTextoBotaoInicial"
        android:layout_marginTop="16dp"
        android:gravity="center" />

</LinearLayout> 