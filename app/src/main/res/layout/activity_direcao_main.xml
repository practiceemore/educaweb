<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".activitys.DirecaoMainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_direcao"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primaria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white"
        app:navigationIconTint="@color/white" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_direcao">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <com.example.educa1.CustomButtonView
                android:id="@+id/btnGerenciarDisciplinas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:buttonText="@string/disciplinas"
                app:showDeleteIcon="false"
                app:showEditIcon="false" />

            <com.example.educa1.CustomButtonView
                android:id="@+id/btnGerenciarProfessores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:buttonText="@string/professores"
                app:showDeleteIcon="false"
                app:showEditIcon="false" />

            <com.example.educa1.CustomButtonView
                android:id="@+id/btnGerenciarTurmas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:buttonText="@string/turmas"
                app:showDeleteIcon="false"
                app:showEditIcon="false" />

            <com.example.educa1.CustomButtonView
                android:id="@+id/btnGerenciarSalas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:buttonText="@string/salas"
                app:showDeleteIcon="false"
                app:showEditIcon="false" />

            <com.example.educa1.CustomButtonView
                android:id="@+id/btnRelatorios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:buttonText="@string/assistenteIA"
                app:showDeleteIcon="false"
                app:showEditIcon="false" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>