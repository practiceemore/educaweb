    <div class="app">
        <header class="header">
            <div class="header-content">
                <h1 class="logo">üéì EducaWeb</h1>
                <nav class="nav" id="mainNav" style="display: none;">
                    <button class="nav-btn active" onclick="showView('dashboard')">üìä Dashboard</button>
                    <button class="nav-btn" onclick="showView('disciplinas')">üìö Disciplinas</button>
                    <button class="nav-btn" onclick="showView('professores')">üë®‚Äçüè´ Professores</button>
                    <button class="nav-btn" onclick="showView('turmas')">üë• Turmas</button>
                    <button class="nav-btn" onclick="showView('salas')">üè´ Salas</button>
                    <button class="nav-btn" onclick="showView('grade')">üìÖ Grade Hor√°ria</button>
